{
  "type": "module",
  "dependencies": {
    "@cloudflare/workers-types": "^3.18.0",
    "@prisma/client": "^4.5.0",
    "@types/react": "^18.0.25",
    "bootstrap": "^5.2.2",
    "esbuild": "^0.15.13",
    "mp3-mediarecorder": "^4.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vmsg": "^0.4.0"
  },
  "devDependencies": {
    "prisma": "^4.5.0"
  },
  "scripts": {
    "postinstall": "prisma generate --data-proxy && npm run copy-assets && npm run build-prod",
    "copy-assets": "mkdir -p dist && cp node_modules/bootstrap/dist/css/bootstrap.min.css* dist/ && cp node_modules/vmsg/vmsg.wasm dist/",
    "build": "esbuild src/index.tsx src/readChapter.tsx src/worker.js src/service-worker.js --bundle --outdir=dist",
    "build-prod": "npm run build -- --minify --target=chrome104,firefox106,safari16",
    "dev": "npm run build -- --watch"
  }
}
