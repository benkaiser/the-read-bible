{
  "type": "module",
  "dependencies": {
    "@cloudflare/workers-types": "^3.18.0",
    "@types/bootstrap": "^5.2.6",
    "@types/react": "^18.0.25",
    "bootstrap": "^5.2.2",
    "esbuild": "^0.15.13",
    "mp3-mediarecorder": "^4.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "realm": "^12.5.1",
    "realm-web": "^2.0.0",
    "vmsg": "^0.4.0"
  },
  "scripts": {
    "postinstall": "npm run copy-assets && npm run build-prod",
    "copy-assets": "mkdir -p dist && cp node_modules/bootstrap/dist/css/bootstrap.min.css* dist/ && cp node_modules/bootstrap/dist/js/bootstrap.bundle.min.js* dist/ && cp node_modules/vmsg/vmsg.wasm dist/",
    "build": "esbuild src/index.tsx src/readChapter.tsx src/worker.js src/service-worker.js --bundle --splitting --format=esm --outdir=dist",
    "build-prod": "npm run build -- --minify --target=chrome104,firefox106,safari16",
    "dev": "npm run build -- --watch",
    "jekyll": "bundle exec jekyll build --watch",
    "serve-r2": "npx http-server --port=10500 .wrangler/state/r2/MY_BUCKET"
  }
}
